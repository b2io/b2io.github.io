{
  "env": {
    "browser": true
  },
  "extends": ["airbnb", "prettier"],
  "globals": {
    "graphql": false
  },
  "parser": "babel-eslint",
  "rules": {
    "react/prefer-stateless-function": "off",
    "jsx-a11y/anchor-is-valid": [
      "error",
      {
        "components": ["Link"],
        "specialLink": ["to"]
      }
    ]
  }
}
