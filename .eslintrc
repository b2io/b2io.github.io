{
  "env": {
    "browser": true
  },
  "extends": ["airbnb", "prettier"],
  "globals": {
    "graphql": false
  },
  "parser": "babel-eslint",
  "rules": {
    "linebreak-style": 0,
    "jsx-a11y/anchor-is-valid": [
      "error",
      {
        "components": ["Link"],
        "specialLink": ["to"]
      }
    ]
  }
}
